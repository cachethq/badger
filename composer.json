{
    "name": "cachethq/badger",
    "description": "A badge generator for Laravel.",
    "keywords": [
        "badger",
        "badge",
        "shield",
        "svg",
        "Badger",
        "Cachet",
        "CachetHQ"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/cachethq/badger/issues",
        "source": "https://github.com/cachethq/badger"
    },
    "authors": [
        {
            "name": "James Brooks",
            "email": "james@alt-three.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0",
        "illuminate/support": "^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.13",
        "pestphp/pest-plugin-laravel": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Cachet\\Badger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cachet\\Tests\\Badger\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0-dev"
        },
        "laravel": {
            "providers": [
                "Cachet\\Badger\\BadgerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
